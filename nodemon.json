{
  "exitcrash": false,
  "verbose": true,
  "runOnChangeOnly": true,
  "watch": ["src", "lib"],
  "ignore": ["./node_modules", "./build", "./test", "*.log", "*.vim"],
  "ext": "js,ts,json,yaml,yml,toml",
  "exec": "ts-node -r tsconfig-paths/register -r dotenv/config -P tsconfig.json --files src/index.ts"
}
