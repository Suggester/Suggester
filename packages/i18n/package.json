{
  "name": "@suggester/i18n",
  "main": "build/lib/index.js",
  "devDependencies": {
    "@suggester/configs": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "discord-api-types": "^0.37.56",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3"
  },
  "dependencies": {
    "@fluent/bundle": "^0.18.0"
  },
  "scripts": {
    "build": "tsc",
    "build-fluenttypes": "fluent-types ../../lang/en-US/translations.ftl -o ./lib/fluentMessages.ts",
    "lint": "eslint .",
    "fmt": "prettier --write --ignore-path=.eslintignore ."
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "build-fluenttypes"
        ],
        "inputs": [
          "^lang",
          "default"
        ]
      }
    }
  }
}
