{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",

  "namedInputs": {
    "lang": ["{workspaceRoot}/lang/**/*.ftl"]
  },

  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "fmt",
          "prisma-generate",
          "prisma-db-push"
        ]
      }
    }
  },

  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },

    "lint": {
    },

    "fmt": {
    },

    "start": {
      "dependsOn": ["build"]
    }
  },

  "affected": {
    "defaultBase": "master"
  }
}
